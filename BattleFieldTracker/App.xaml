<Application x:Class="BattleFieldTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BattleFieldTracker"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ImageBrush x:Key="WindowBackgroundImage" ImageSource="Images/bf12.jpg" Stretch="UniformToFill"/>
        <Style TargetType="{x:Type local:MainWindow}">
            <Setter Property="Background" Value="{StaticResource WindowBackgroundImage}"/>
        </Style>
    </Application.Resources>
</Application>
