<Window x:Class="BattleFieldTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:BattleFieldTracker.ViewModels"
        xmlns:weapons="clr-namespace:BattleFieldTracker.DownloadModels"
        xmlns:vehicles="clr-namespace:BattleFieldTracker.DownloadModels"
        xmlns:visibilityConverter="clr-namespace:BattleFieldTracker.Converter"
        mc:Ignorable="d"
        Title="Battlefield 1 Tracker" Height="750" Width="1050" Background="#FFF1F1F1">

    <Window.Resources>
        <!--  Template für die Anzeige des Fehlers als roter Text unter dem jeweiligen Control  -->
        <ControlTemplate x:Key="ErrorTemplate">
            <StackPanel>
                <!--  Placeholder for the TextBox itself  -->
                <AdornedElementPlaceholder x:Name="textBox" />
                <ItemsControl ItemsSource="{Binding}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!--  ReSharper disable once Xaml.BindingWithContextNotResolved  -->
                            <TextBlock Foreground="Red" Text="{Binding ErrorContent}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ControlTemplate>

        <!--  ErrorTemplate bei allen TextBoxes setzen  -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="4" />
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorTemplate}" />
        </Style>

        <visibilityConverter:VisibilityConverter x:Key="VisibilityConverter" />
    </Window.Resources>

    <Grid Margin="5,5,5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <StackPanel Orientation="Vertical">
                <Label
                    Content="{Binding PlayerStatsViewModel.DisplayName }"
                    FontFamily="Calibri"
                    FontSize="18"
                    FontWeight="Bold" HorizontalAlignment="Center" />
                <Image
                    Height="75"
                    Margin="10,10,10,10"
                    Source="{Binding PlayerStatsViewModel.RankImage}"/>

                <Label Content="{Binding PlayerStatsViewModel.RankName}" FontSize="16" FontWeight="Bold" FontFamily="Calibri" HorizontalAlignment="Center"/>

                <Grid Margin="0 10 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="Current XP:" FontSize="16" FontWeight="Bold" FontFamily="Calibri" BorderBrush="Black" OpacityMask="White" Foreground="Black"/>
                    <Label Grid.Column="1" Content="{Binding PlayerStatsViewModel.CurrentXp}" FontFamily="Calibri" FontSize="16" Foreground="Black" BorderBrush="Black" />
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="Total XP:" FontSize="16" FontWeight="Bold" FontFamily="Calibri" BorderBrush="Black" Foreground="Black"/>
                    <Label Grid.Column="1" Content="{Binding PlayerStatsViewModel.TotalXp}" FontFamily="Calibri" FontSize="16" BorderBrush="Black" Foreground="Black" />
                </Grid>

            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        Grid.Column="0"
                        Margin="5,5,5,5" 
                        Text="{Binding PlayerName, Mode=TwoWay, ValidatesOnDataErrors=True}" 
                        FontFamily="Calibri" FontSize="22" 
                        VerticalAlignment="Center" 
                        Foreground="Black" 
                        Background="Transparent" 
                        BorderBrush="Black"/>
                    
                    <Button
                        Grid.Column="1"
                        Margin="5,5,5,5"
                        VerticalContentAlignment="Center"
                        Command="{Binding SearchCommand}"
                        Content="Search" FontFamily="Calibri" FontWeight="Bold" FontSize="20" Background="Transparent" BorderBrush="Black" Foreground="Black" />
                </Grid>

                <ProgressBar Grid.Row="1" Height="10"  IsIndeterminate="True" Visibility="{Binding IsDownloading, Converter={StaticResource VisibilityConverter} }" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

                <TabControl Grid.Row="2" Margin="0 10 0 0" FontFamily="Calibri" FontWeight="Bold" FontSize="20" BorderBrush="Black" Background="Transparent" Foreground="Black">
                    <TabItem Header="General" Foreground="Black" BorderBrush="Black" Background="#FF9E9E9E">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="2*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0" Text="Kills" TextAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Grid.Row="0" Text="Deaths" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                                <TextBlock Grid.Column="2" Grid.Row="0" Text="Wins" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                                <TextBlock Grid.Column="3" Grid.Row="0" Text="Losses" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                                <TextBlock Grid.Column="4" Grid.Row="0" Text="SPM" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                                <TextBlock Grid.Column="5" Grid.Row="0" Text="KPM" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                                <TextBlock Grid.Column="6" Grid.Row="0" Text="Time Played" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>

                                <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding PlayerStatsViewModel.Kills}" TextAlignment="Center" VerticalAlignment="Center" FontWeight="Normal"></TextBlock>
                                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding PlayerStatsViewModel.Deaths}" TextAlignment="Center" VerticalAlignment="Center" FontWeight="Normal"></TextBlock>
                                <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding PlayerStatsViewModel.Wins}" TextAlignment="Center" VerticalAlignment="Center" FontWeight="Normal"></TextBlock>
                                <TextBlock Grid.Column="3" Grid.Row="1" Text="{Binding PlayerStatsViewModel.Losses}" TextAlignment="Center" VerticalAlignment="Center" FontWeight="Normal"></TextBlock>
                                <TextBlock Grid.Column="4" Grid.Row="1" Text="{Binding PlayerStatsViewModel.Spm}" TextAlignment="Center" VerticalAlignment="Center" FontWeight="Normal"></TextBlock>
                                <TextBlock Grid.Column="5" Grid.Row="1" Text="{Binding PlayerStatsViewModel.Kpm}" TextAlignment="Center" VerticalAlignment="Center" FontWeight="Normal"></TextBlock>
                                <TextBlock Grid.Column="6" Grid.Row="1" Text="{Binding PlayerStatsViewModel.TimePlayed}" TextAlignment="Center" VerticalAlignment="Center" FontWeight="Normal"></TextBlock>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Top Class" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                                    <TextBlock Grid.Row="1" Text="{Binding PlayerStatsViewModel.TopClass}" TextAlignment="Center" VerticalAlignment="Top"></TextBlock>
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Top Vehicle" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                                    <TextBlock Grid.Row="1" Text="{Binding PlayerStatsViewModel.TopVehicle}" TextAlignment="Center" VerticalAlignment="Top"></TextBlock>
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Top Primary" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                                    <TextBlock Grid.Row="1" Text="{Binding PlayerStatsViewModel.TopPrimary}" TextAlignment="Center" VerticalAlignment="Top"></TextBlock>
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Top Secondary" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
                                    <TextBlock Grid.Row="1" Text="{Binding PlayerStatsViewModel.TopSecondary}" TextAlignment="Center" VerticalAlignment="Top"></TextBlock>
                                </Grid>
                            </Grid>

                        </Grid>
                    </TabItem>
                    <TabItem Header="Weapons" FontFamily="Calibri" FontWeight="Bold" FontSize="20" BorderBrush="Black" Foreground="Black" Background="#FF9E9E9E">

                        <ListBox
                                MinWidth="240"
                                BorderThickness="0,0,0,0"
                                DockPanel.Dock="Left"
                                Focusable="True"
                                ItemsSource="{Binding WeaponStatsViewModel.Weapons}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="weapons:ResultWeaponStats">
                                    <DockPanel>
                                        <StackPanel Margin="5 5 5 5" Orientation="Horizontal">
                                            <TextBlock FontSize="16" Text="{Binding Name}" />
                                        </StackPanel>
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </TabItem>
                    <TabItem Header="Vehicles" Foreground="Black" BorderBrush="Black" Background="#FF9E9E9E">
                        <ListBox
                            MinWidth="240"
                            BorderThickness="0,0,0,0"
                            DockPanel.Dock="Left"
                            Focusable="True"
                            ItemsSource="{Binding VehicleStatsViewModel.Vehicles}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="vehicles:ResultVehicleStats">
                                    <DockPanel>
                                        <StackPanel Margin="5 5 5 5" Orientation="Horizontal">
                                            <TextBlock FontSize="16" Text="{Binding Name}" />
                                        </StackPanel>
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Grid>
</Window>
