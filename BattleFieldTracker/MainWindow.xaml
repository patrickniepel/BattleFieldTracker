<Window x:Class="BattleFieldTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:BattleFieldTracker.ViewModels"
        xmlns:highlights="clr-namespace:BattleFieldTracker.DownloadModels"
        mc:Ignorable="d"
        Title="Battlefield 1 Tracker" Height="750" Width="1050" Background="{DynamicResource WindowBackgroundImage}">

    <Window.Resources>
        <!--  Template für die Anzeige des Fehlers als roter Text unter dem jeweiligen Control  -->
        <ControlTemplate x:Key="ErrorTemplate">
            <StackPanel>
                <!--  Placeholder for the TextBox itself  -->
                <AdornedElementPlaceholder x:Name="textBox" />
                <ItemsControl ItemsSource="{Binding}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!--  ReSharper disable once Xaml.BindingWithContextNotResolved  -->
                            <TextBlock Foreground="Red" Text="{Binding ErrorContent}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ControlTemplate>

        <!--  ErrorTemplate bei allen TextBoxes setzen  -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="4" />
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorTemplate}" />
        </Style>
    </Window.Resources>
    
    <Grid x:Name="TopGrid" Margin="5,5,5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="TopGridColumn1" Width="*" />
            <ColumnDefinition x:Name="TopGridColumn2" Width="4*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <StackPanel x:Name="ProfileStackPanel" Orientation="Vertical">
                <Label
                    x:Name="PlayerNameLabel"
                    Content="{Binding PlayerStatsViewModel.DisplayName }"
                    FontFamily="Calibri"
                    FontSize="18"
                    FontWeight="Bold" HorizontalAlignment="Center" />
                <Image
                    x:Name="RankImage"
                    Height="75"
                    Margin="10,10,10,10"
                    Source="{Binding PlayerStatsViewModel.RankImage}"/>

                <Label x:Name="RankName" Content="{Binding PlayerStatsViewModel.RankName}" FontSize="16" FontWeight="Bold" FontFamily="Calibri" HorizontalAlignment="Center"/>

                <Grid Margin="0 10 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="Current XP:" FontSize="16" FontWeight="Bold" FontFamily="Calibri" BorderBrush="Black" OpacityMask="White" Foreground="Black"/>
                    <Label Grid.Column="1"  x:Name="CurrentXpRankLabel" Content="{Binding PlayerStatsViewModel.CurrentXp}" FontFamily="Calibri" FontSize="16" Foreground="Black" BorderBrush="Black" />
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="Total XP:" FontSize="16" FontWeight="Bold" FontFamily="Calibri" BorderBrush="Black" Foreground="Black"/>
                    <Label Grid.Column="1" x:Name="TotalXpRankLabel" Content="{Binding PlayerStatsViewModel.TotalXp}" FontFamily="Calibri" FontSize="16" BorderBrush="Black" Foreground="Black" />
                </Grid>

            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>

                <Grid x:Name="SearchGrid" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        x:Name="SearchField"
                        Grid.Column="0"
                        Margin="5,5,5,5" 
                        Text="{Binding PlayerName, Mode=TwoWay, ValidatesOnDataErrors=True}" 
                        FontFamily="Calibri" FontSize="22" 
                        VerticalAlignment="Center" 
                        Foreground="Black" 
                        Background="Transparent" 
                        BorderBrush="Black"/>
                    <Button
                        x:Name="SearchButton"
                        Grid.Column="1"
                        Margin="5,5,5,5"
                        VerticalContentAlignment="Center"
                        Command="{Binding SearchCommand}"
                        Content="Search" FontFamily="Calibri" FontWeight="Bold" FontSize="20" Background="Transparent" BorderBrush="Black" Foreground="Black" />
                </Grid>

                <TabControl Grid.Row="1" Margin="0 10 0 0" FontFamily="Calibri" FontWeight="Bold" FontSize="20" BorderBrush="Black" Background="Transparent" Foreground="Black">
                    <TabItem Header="General" Foreground="Black" BorderBrush="Black" Background="#FF9E9E9E">
                        <ListBox
                            MinWidth="240"
                            BorderThickness="0,0,0,0"
                            DockPanel.Dock="Left"
                            Focusable="True"
                            ItemsSource="{Binding PlayerStatsViewModel.Highlights}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="highlights:Highlight">
                                    <DockPanel>
                                        <StackPanel Margin="5 5 5 5">
                                            <TextBlock FontSize="16" Text="{Binding HighlightName}" />
                                        </StackPanel>
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </TabItem>
                    <TabItem Header="Weapons" FontFamily="Calibri" FontWeight="Bold" FontSize="20" BorderBrush="Black" Foreground="Black" Background="#FF9B9B9B">
                        <Grid Background="#00E5E5E5">
                            <Grid.OpacityMask>
                                <ImageBrush/>
                            </Grid.OpacityMask>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Vehicles" Foreground="Black" BorderBrush="Black" Background="#FF9E9E9E">
                        <Grid Background="Transparent"/>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Grid>
</Window>
